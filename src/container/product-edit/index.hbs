Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
	<section>
		<div class="form">
			<h1 class="form__title">Редагування товарау</h1>

			<form method="POST" action="/product-edit">

				<div class="form__content">

					<div class="form__row3">
						<div class="form__field">
							<label for="name" class="form__label">Назва товару</label>
							<input value="{{name}}" type="name" name="name" id="" class="form__input">
						</div>
						<div class="form__field">
							<label for="price" class="form__label">Ціна</label>
							<input value="{{price}}" type="price" name="price" id="" class="form__input">
						</div>
						<div class="form__field">
							<label for="id" class="form__label">ID</label>
							<input value="{{ID}}" type="id" name="id" id="" class="form__input">
						</div>
					</div>

					<div class="form__row1">
						<div class="form__field form__field--one">
							<label for="description" class="form__label">Короткий опис товару:</label>
							<input value="{{description}}" type="description" name="description" id="description"
								class="form__input">
							<label for="description" class="form__label form__label--gray">Відображається у картці
								товару</label>

						</div>
					</div>

					<div class="form__row2">
						<button type="submit" class="form__button click" target="_blank">Зберегти оновлення</button>
						<a href='/product-delete?id={{ID}}' class="form__button form__button--red click">Видалити
							товар</a>
					</div>
				</div>
			</form>
		</div>
		<div class="box">
			<a class="button click button--outline" href="/product-list">Список товарів</a>
			<a class="button click" href="/product-create">Створити новий</a>
		</div>
	</section>

</main>

